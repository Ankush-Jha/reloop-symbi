rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper: Validate XP/coin increment is reasonable (anti-cheat)
    function isValidRewardIncrement() {
      let xpDelta = request.resource.data.xp - resource.data.xp;
      let coinDelta = request.resource.data.coins - resource.data.coins;
      // Allow increments up to 200 per transaction (covers mission rewards)
      return xpDelta >= 0 && xpDelta <= 200 && coinDelta >= 0 && coinDelta <= 100;
    }
    
    // ============ USERS ============
    match /users/{userId} {
      // TEMPORARY: Allow all access for seeding mock data
      allow read, write: if true;
    }
    
    // ============ LISTINGS ============
    match /listings/{listingId} {
      // Anyone authenticated can read listings
      allow read: if isAuthenticated();
      
      // Users can create listings
      allow create: if isAuthenticated() 
        && request.resource.data.sellerId == request.auth.uid
        && request.resource.data.status == 'available';
      
      // Sellers can update their own listings
      allow update: if isAuthenticated() 
        && resource.data.sellerId == request.auth.uid;
      
      // Sellers can delete their own unsold listings
      allow delete: if isAuthenticated() 
        && resource.data.sellerId == request.auth.uid
        && resource.data.status == 'available';
    }
    
    // ============ TRADES ============
    match /trades/{tradeId} {
      // Participants can read trades they're involved in
      allow read: if isAuthenticated() 
        && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
      
      // Buyers can create trade requests
      allow create: if isAuthenticated() 
        && request.resource.data.buyerId == request.auth.uid
        && request.resource.data.status == 'pending';
      
      // Sellers can accept/reject trades, buyers can cancel
      allow update: if isAuthenticated() 
        && (resource.data.sellerId == request.auth.uid || resource.data.buyerId == request.auth.uid);
      
      // No deletion of trades (audit trail)
      allow delete: if false;
    }
    
    // ============ CONVERSATIONS ============
    match /conversations/{conversationId} {
      // Participants can read their conversations
      allow read: if isAuthenticated() 
        && request.auth.uid in resource.data.participants;
      
      // Authenticated users can create conversations
      allow create: if isAuthenticated() 
        && request.auth.uid in request.resource.data.participants;
      
      // Participants can update (for lastMessage)
      allow update: if isAuthenticated() 
        && request.auth.uid in resource.data.participants;
      
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Participants can read messages
        allow read: if isAuthenticated();
        
        // Only sender can create their own messages
        allow create: if isAuthenticated() 
          && request.resource.data.senderId == request.auth.uid;
        
        // No editing or deleting messages
        allow update, delete: if false;
      }
    }
  }
}

